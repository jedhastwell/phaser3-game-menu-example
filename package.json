{
  "name": "phaser3-es6-vite-boilerplate",
  "description": "A boilerplate project for creating games with Phaser3, TypeScript ES6 and Vite",
  "private": true,
  "version": "1.0.0",
  "author": "Andrey Zolotarev",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "butler/butler.exe push -i ./butler/butler_creds dist zolotarev/star-lord:HTML",
    "release": "yarn build && yarn deploy",
    "login": "butler/butler.exe login -i ./butler/butler_creds"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-static-copy": "^0.17.0"
  },
  "dependencies": {
    "phaser": "^3.60.0",
    "phaser3-nineslice": "^0.5.0"
  }
}
